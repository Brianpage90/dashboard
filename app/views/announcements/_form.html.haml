= form_for @announcement do |f|
  - if @announcement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@announcement.errors.count, "error")} prohibited this announcement from being saved:"
      %ul
        - @announcement.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :publish_on
    = f.date_select :publish_on
  .field
    = f.label :expire_on
    = f.date_select :expire_on
  .field
    = f.label :critical_flag
    = f.check_box :critical_flag
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :publisher
    = f.text_field :publisher
  .actions
    = f.submit 'Save'
