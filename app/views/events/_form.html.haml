= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :event_date
    = f.date_select :event_date
  .field
    = f.label :event_time
    = f.time_select :event_time
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_field :body
  .field
    = f.label :publisher
    = f.text_field :publisher
  .actions
    = f.submit 'Save'
