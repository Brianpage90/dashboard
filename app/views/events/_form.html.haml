= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :event_date
    = f.date_select :event_date
  .field
    = f.label :event_time
    = f.time_select :event_time
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_field :body
  .actions
    = f.submit 'Save'

%form.form-horizontal
  %fieldset
    %legend Legend
    .form-group
      %label.col-lg-2.control-label{:for => "title"} Title
      .col-lg-10
        %input#title.form-control{:placeholder => "Title"}
    .form-group
      %label.col-lg-2.control-label{:for => "body"} Event Description
      .col-lg-10
        %textarea#textArea.form-control{:rows => "3"}

    .form-group
      .col-lg-10.col-lg-offset-2
        %button.btn.btn-danger Cancel
        %button.btn.btn-primary{:type => "submit"} Submit